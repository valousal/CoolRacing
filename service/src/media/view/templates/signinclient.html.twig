{% extends "main.html.twig" %}
{% block main_content %}
<section id="main_form">
	<form id='formclient' method="POST" action="{{traitement}}">
		<div class="form-group">
		    <label>Login</label>
		    <input type="text" name="login" placeholder="Entrez votre login" class="form-control">
		</div>

		<div class="form-group">
		    <label>Secret</label>
		    <input type="password" name="secret" placeholder="Entrez votre Secret" class="form-control">
		</div>
		<button type="submit" class="btn btn-default"> OK </button>
	</form>
</section>
{% endblock %}